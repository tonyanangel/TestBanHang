<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/mkh" />

        <TextView
            android:id="@+id/mkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Tặng mã cho khách hàng bạn"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mkh"
            android:layout_marginLeft="20dp"
            android:hint="Nhận ngay 10.000đ cho mỗi người"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tknh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản ngân hàng"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TenKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tknh"
            android:text="Nguyễn Thị Diệu Hiền"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TenKH"
            android:text="1903.3952.543012"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/thongtinCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cửa hàng"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/thaydoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginRight="10dp"
            android:text="Thay đổi"
            android:textSize="20sp"


            ></TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="94dp"
            android:layout_marginRight="30dp"


            android:layout_toLeftOf="@+id/thaydoi"
            android:src="@drawable/ic_launcher_background" />
        <ImageView
            android:id="@+id/map"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/android_map"
            android:layout_below="@+id/thongtinCH"
            android:layout_marginTop="50dp"

            >

        </ImageView>
        <TextView
            android:id="@+id/diachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="302 Tô Hiến Thành,P13,Q10"
            android:layout_below="@+id/thongtinCH"
            android:layout_toRightOf="@+id/phone"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            ></TextView>
        <ImageView
            android:id="@+id/phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/android_phone"
            android:layout_below="@+id/map"
            android:layout_marginTop="10dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0909.999.9999"
            android:layout_toRightOf="@+id/phone"
            android:layout_below="@+id/map"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

        </TextView>

        <ImageView
            android:id="@+id/mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/android_mail"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: chucuahang@lozi.vn"
            android:layout_toRightOf="@+id/mail"
            android:layout_below="@+id/phone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

        </TextView>

        <ImageView
            android:id="@+id/Time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/android_time"
            android:layout_below="@+id/mail"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ mở cửa: Thứ hai (9:00 - 17:00), Th..."
            android:layout_toRightOf="@+id/mail"
            android:layout_below="@+id/mail"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/Cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/android_cart"
            android:layout_below="@+id/Time"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngành kinh doanh : Trà sữa, Nước ép"
            android:layout_toRightOf="@+id/Time"
            android:layout_below="@+id/Time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/android_setting" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt hóa đơn"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_toRightOf="@id/setting"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/android_right_arrow"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"

        >
        <ImageView
            android:id="@+id/donhang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/android_donhang"/>
        <TextView
            android:id="@+id/textDh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng mới"
            android:layout_below="@+id/donhang"/>
        <ImageView
            android:id="@+id/quanly"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/android_quanly"
            android:layout_toRightOf="@id/donhang"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:id="@+id/textQL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản Lý"
            android:layout_below="@+id/quanly"
            android:layout_toRightOf="@id/textDh"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/losupply"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/android_losupply"
            android:layout_toRightOf="@id/quanly"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/textLS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lo-Supply"
            android:layout_below="@+id/losupply"
            android:layout_toRightOf="@id/textQL"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/cuahang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/android_cuhang"
            android:layout_toRightOf="@id/losupply"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/texCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cửa hàng"
            android:layout_below="@+id/losupply"
            android:layout_toRightOf="@id/textLS"
            android:layout_marginLeft="40dp"/>


    </RelativeLayout>


</LinearLayout>